#!/bin/bash
BASE='/usr/games'
SHO='/var/lib/adom/bin'
SAGE='-0.9.2'
EXE=$(basename ${0})
PASSIVE="-p"
DEBUG=""
#DEBUG="-d 13"
if [[ $1 == "--enable-sage" ]]; then
        PASSIVE=""
fi

${SHO}/adom-sage${SAGE} -a /usr/games/${EXE}-bin -s ${SHO}/adom-sage${SAGE}.so -l ${HOME}/sage-log.txt $DEBUG $PASSIVE
